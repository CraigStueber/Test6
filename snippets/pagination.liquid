{% if pagination.pages > 0 %}
    <nav role="navigation" class="text-center">
        {% if pagination.previous %}
            <a href="{{ pagination.previous.url }}"
                 class="nextPagination">
                 {{ pagination.previous.title }} 
            </a>
        {% endif %}
        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}"
                    class="nextPagination">
                    {{ part.title }} 
               </a>
            {% else %}
                <span class="activePage" >{{ part.title}} </span>
            {% endif %}
         
        {% endfor %}
        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" 
                class="nextPagination"> 
                {{ pagination.next.title }} 
            </a>
        {% endif %}
   

    </nav>
    
{% endif %}